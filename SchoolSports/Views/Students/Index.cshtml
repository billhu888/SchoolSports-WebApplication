@{
    ViewData["Title"] = "Search Students";
}

<div class="text-center">
    @using (Html.BeginForm("SearchStudentsResults", "Students", FormMethod.Get))
    {
        <table cellpadding="0" cellspacing="0" id="Students_Index_Table">
            <tr>
                <th colspan="2" align="center">Student Details</th>
            </tr>
            <tr>
                <td align="left">First Name: </td>
                <td>
                    @*FirstName string variable in parameter is the same as name 
                    "Firstname" here*@
                    <input type="text" name="FirstName">
                </td>
            </tr>
            <tr>
                <td align="left">Last Name (*): </td>
                <td>
                    @*LastName string variable in parameter is the same as name 
                    "LastName" here*@
                    <input type="text" name="LastName">
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center"> Last Name Required </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Submit">
                </td>
            </tr>
        </table>
    }

    <div style="text-align: left; margin-top: 10px;">
        <a href="@Url.Action("AddNewStudent", "Students")">
            Add New Student
        </a>
    </div>
</div>